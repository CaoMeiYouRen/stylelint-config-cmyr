{
  "name": "stylelint-config-cmyr",
  "version": "0.3.0",
  "author": "CaoMeiYouRen",
  "description": "草梅友仁个人使用的 stylelint 检测规范",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "deploy-beta": "nrm use npm && npm publish --tag beta",
    "deploy": "nrm use npm && npm publish",
    "lint": "cross-env NODE_ENV=production eslint --fix --ext .js",
    "lint:css": "stylelint ./**/*.{css,scss,sass} --fix",
    "lint:vue": "stylelint ./**/*.vue --fix --custom-syntax postcss-html",
    "release": "semantic-release",
    "build": "cross-env NODE_ENV=production tsdown"
  },
  "keywords": [
    "code",
    "style",
    "lint",
    "stylelint",
    "code style"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/stylelint-config-cmyr.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/stylelint-config-cmyr/issues"
  },
  "homepage": "https://github.com/CaoMeiYouRen/stylelint-config-cmyr#readme",
  "dependencies": {
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.3.0",
    "conventional-changelog-cmyr-config": "^2.1.2",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-cmyr": "2.0.0-beta.15",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "semantic-release": "^19.0.5",
    "stylelint": "^16.23.1",
    "tsdown": "^0.14.1",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "postcss": ">=8",
    "postcss-html": ">=1",
    "postcss-scss": ">=4",
    "stylelint": ">=16"
  },
  "peerDependenciesMeta": {
    "stylelint": {
      "optional": false
    },
    "postcss": {
      "optional": true
    },
    "postcss-scss": {
      "optional": true
    },
    "postcss-html": {
      "optional": true
    }
  },
  "changelog": {
    "language": "zh"
  }
}
