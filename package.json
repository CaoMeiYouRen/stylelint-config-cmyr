{
  "name": "stylelint-config-cmyr",
  "version": "1.0.0",
  "author": "CaoMeiYouRen",
  "description": "草梅友仁个人使用的 stylelint 检测规范",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "deploy-beta": "nrm use npm && npm publish --tag beta",
    "deploy": "nrm use npm && npm publish",
    "lint": "cross-env NODE_ENV=production eslint --fix --ext .js",
    "lint:css": "stylelint ./**/*.{css,scss,sass,vue} --fix",
    "test": "stylelint test/**/*.{css,scss,sass,vue}",
    "release": "semantic-release",
    "build": "cross-env NODE_ENV=production tsdown",
    "prepare": "husky install"
  },
  "keywords": [
    "code",
    "style",
    "lint",
    "stylelint",
    "code style"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/stylelint-config-cmyr.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/stylelint-config-cmyr/issues"
  },
  "homepage": "https://github.com/CaoMeiYouRen/stylelint-config-cmyr#readme",
  "dependencies": {
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@types/node": "^25.0.3",
    "commitlint-config-cmyr": "1.0.0",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog-cmyr": "2.0.0",
    "eslint": "^9.33.0",
    "eslint-config-cmyr": "2.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "semantic-release": "^25.0.1",
    "semantic-release-cmyr-config": "1.0.1",
    "stylelint": "^16.23.1",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "postcss": ">=8",
    "stylelint": ">=16"
  },
  "peerDependenciesMeta": {
    "stylelint": {
      "optional": false
    },
    "postcss": {
      "optional": false
    }
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "npm run lint"
    ],
    "*.{css,scss,sass,vue}": [
      "npm run lint:css"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-cmyr"
    }
  }
}
